{% extends 'base.html.twig' %}

{% block title %}New Book{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            margin-top: 20px;
            margin-bottom: 20px;
        }
        .btn-round {
            border-radius: 20px;
            margin-right: 10px;
        }
        .btn-back {
            background-color: #e7b7a3;
            color: #4e4e4e;
            border: 1px solid #e7b7a3;
            border-radius: 5px;
            padding: 8px 16px;
            text-decoration: none;
        }
        .btn-back:hover {
            background-color: #4e4e4e;
            color: white;
            border-color: #4e4e4e;
        }
        .form-container {
            background-color: #f2e8da;
            border: 1px solid #e7b7a3;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .form-title {
            margin-bottom: 20px;
            color: #4e4e4e;
            font-size: 24px;
            text-align: center;
        }
        .form-control {
            margin-bottom: 15px;
            border-radius: 5px;
            padding: 10px;
            border: 1px solid #ccc;
            width: 100%;
        }
        .btn-submit {
            background-color: #4e4e4e;
            color: white;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            cursor: pointer;
        }
        .btn-submit:hover {
            background-color: #333;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="form-container">
            <h1 class="form-title">Create New Book</h1>

            {{ include('book/_form.html.twig') }}

            <a href="{{ path('app_book_index') }}" class="btn btn-back btn-round">Back to List</a>
        </div>
    </div>
{% endblock %}
